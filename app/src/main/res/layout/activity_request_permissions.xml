<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestPermissionsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_request_permissions"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/requestPermissionsButton"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="112dp"
            android:background="@drawable/selector_request_permissions"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:orientation="vertical">

                <!-- write_external_storage -->
                <FrameLayout
                    android:id="@+id/writeExternalStorageFrameLayout"
                    android:background="#4e6a78"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="271dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_write_external_storage"/>
                </FrameLayout>

                <!-- record_audio -->
                <FrameLayout
                    android:id="@+id/recordAudioFrameLayout"
                    android:background="#4e6a78"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:layout_width="120dp"
                        android:layout_height="53dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_record_audio"/>
                </FrameLayout>

                <!-- read_phone_state -->
                <FrameLayout
                    android:id="@+id/readPhoneStateFrameLayout"
                    android:background="#4e6a78"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="249dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_read_phone_state"/>
                </FrameLayout>

                <!-- read_contacts -->
                <FrameLayout
                    android:id="@+id/readContactsFrameLayout"
                    android:background="#4e6a78"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_width="278dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_read_contacts"/>
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>